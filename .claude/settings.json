{
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch"
    ]
  },
  "project": {
    "name": "Necdet",
    "language": "tr",
    "trusted": true
  },
  "preferences": {
    "codeStyle": {
      "indentation": "spaces",
      "indentSize": 4,
      "lineEnding": "lf"
    },
    "commitMessages": {
      "language": "tr",
      "conventionalCommits": true,
      "style": "descriptive",
      "template": "Türkçe açıklamalı commit mesajları kullan",
      "noCoAuthoredBy": true
    },
    "documents": {
      "noAISignatures": true
    }
  }
}
